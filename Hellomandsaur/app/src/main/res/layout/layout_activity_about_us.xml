<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mandasur.app.aboutus_contact.AboutUsAndAdvertiseWithUsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/Toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/layout_custom_tool_bar_layout"
                />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>



    <WebView
        android:id="@+id/aboutUsTv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/metrics_10dp"

        android:layout_weight="1"
        />
    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        >
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        />
        </LinearLayout>
    <com.mandasur.app.util.MandsaurNewsTextView
        android:id="@+id/titleNewsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="@dimen/metrics_10dp"

        android:layout_marginTop="@dimen/metrics_10dp"
        fontPath="fonts/Roboto-Bold.ttf"
        android:gravity="center"

        android:background="@color/red"
        android:drawableLeft="@android:drawable/ic_menu_call"
        />
    <com.mandasur.app.util.MandsaurNewsTextView
        android:id="@+id/emailTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:padding="@dimen/metrics_10dp"

        android:layout_marginTop="@dimen/metrics_10dp"
        fontPath="fonts/Roboto-Bold.ttf"
        android:gravity="center"
        android:text="info@hellomandsaur.com"
        android:background="@color/red"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        />
</LinearLayout>
