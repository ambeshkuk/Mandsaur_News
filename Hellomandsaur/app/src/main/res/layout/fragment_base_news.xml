<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.mandasur.app.news.BaseCategoryFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/newsTl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"

        app:tabTextColor="@color/off_white"
        app:tabSelectedTextColor="@color/white"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabPadding="@dimen/metrics_5dp"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="@dimen/metrics_5dp"
        app:tabMode="scrollable"
        app:tabTextAppearance="?android:attr/textAppearanceSmall"

         />

    <android.support.v4.view.ViewPager
        android:id="@+id/baseNewsVp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

</android.support.v4.view.ViewPager>
</LinearLayout>
